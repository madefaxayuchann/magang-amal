mixin breadcrumb(data)
  style.
    .breadcrumb {
      font-family: Overpass, Rubik, sans-serif;
      font-size: 18px;
      border: 1px solid #dddddd;
      background: #f5f5f5;
      margin-top: 10px;
    }
    .breadcrumb li a {
      color: #337ab7 !important;
    }
    @media (max-width: 1090px) {
      .breadcrumb {
        font-size: 14px;
      }
    }
  nav.px-5.mb-4.breadcrumb-container(aria-label="breadcrumb")
    ol.breadcrumb.my-0.py-2.px-3.mt-4
      each link, name in data
        if link
          li.breadcrumb-item: a(href=link)= name
        else
          li.breadcrumb-item.active= name
  script.
    if ($(window).width() < 1090) {
      $(document).ready(() => {
        $(".breadcrumb-container").addClass("mb-2").removeClass("mb-4").addClass("px-4").removeClass("px-5");
      });
    }
